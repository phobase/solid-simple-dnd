{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": [
    "src",
    "test"
  ],
  "files": [
    "./src/types.d.ts"
  ]
}

